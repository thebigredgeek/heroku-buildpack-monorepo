#!/usr/bin/env bash

indent() {
    sed -u 's/^/      /'
}

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

if [ ! -f ${ENV_DIR}/APP_BASE ]; then
    echo "APP_BASE was not set. Aborting" | indent
fi
APP_BASE=$(cat ${ENV_DIR}/APP_BASE)

(
    stage=`mktemp -d` &&
    echo "staged ${stage}" &&
    mv ${BUILD_DIR}/${APP_BASE} ${stage} &&
    echo "mved ${BUILD_DIR}/${APP_BASE} ${stage}" &&
    shopt -s dotglob nullglob &&
    rm -rf ${BUILD_DIR}/* &&
    mv ${stage}/${APP_BASE}/* ${BUILD_DIR} &&
    echo "mvd ${stage}/${APP_BASE}/* ${BUILD_DIR}"
)

if ! [ $? ]; then
    echo "FAILED to copy a Procfile" | indent
    exit 1
fi

echo "Copied ${APP_BASE} to root of app successfully" | indent

